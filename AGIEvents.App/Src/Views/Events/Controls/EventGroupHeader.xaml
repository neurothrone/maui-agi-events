<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AGIEvents.Lib.ViewModels;assembly=AGIEvents.Lib"
             x:Class="AGIEvents.App.Views.Events.Controls.EventGroupHeader"
             x:DataType="viewModels:EventGroup">

    <Grid>
        <Label
            TextColor="White"
            FontSize="24"
            Margin="0,10">

            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding GroupName}" />
                    <Span Text=" (" TextColor="DarkGray" />
                    <Span Text="{Binding Count}" TextColor="MediumSlateBlue"
                          FontAttributes="Bold" />
                    <Span Text=")" TextColor="DarkGray" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </Grid>

</ContentView>